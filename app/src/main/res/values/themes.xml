<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Desaf" parent="Theme.Material3.Dark">
        <!-- Colores principales -->
        <item name="colorPrimary">@color/primary_purple</item>
        <item name="colorPrimaryDark">@color/primary_purple_dark</item>
        <item name="colorAccent">@color/accent_violet</item>

        <!-- Fondo de la app -->
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="backgroundColor">@color/background_dark</item>

        <!-- Color de la barra de estado -->
        <item name="android:statusBarColor">@color/primary_purple_dark</item>

        <!-- Textos -->
        <item name="android:textColorPrimary">@color/text_white</item>
        <item name="android:textColorSecondary">@color/text_gray</item>

        <!-- Bottom Navigation -->
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
    </style>

    <style name="Theme.Desaf" parent="Base.Theme.Desaf" />

    <!-- Estilo para Bottom Navigation -->
    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
        <item name="android:background">@color/background_card</item>
        <item name="itemIconTint">@color/bottom_nav_color</item>
        <item name="itemTextColor">@color/bottom_nav_color</item>
        <item name="elevation">8dp</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/accent_violet</item>
        <item name="colorOnPrimary">@color/text_gray</item>
    </style>

    <!-- Estilo para FAB (Floating Action Button) -->
    <style name="Widget.App.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/accent_violet</item>
        <item name="tint">@color/white</item>
        <item name="elevation">6dp</item>
    </style>
</resources>